                "fn": "generateData",
                "implHandler": [
                    "var data = [],\r",
                    "i,\r",
                    "rest = names.length, consume;\r",
                    "\r",
                    "for (i = 0; i < names.length; i++) {\r",
                    "    consume = Math.floor(Math.random() * rest * 100) / 100 + 2;\r",
                    "    rest = rest - (consume - 5);\r",
                    "    data.push({\r",
                    "        name: names[i],\r",
                    "        memory: consume\r",
                    "    });\r",
                    "}\r",
                    "\r",
                    "return data;"
                ]
